  "description": "Gnosis Conditional Tokens Framework implementation on Solana",
  "main": "index.js",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:unit": "mocha -r ts-node/register tests/**/*.ts",
