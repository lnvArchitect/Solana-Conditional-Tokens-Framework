    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "prettier": "^2.6.2"
  },
  "keywords": [
    "solana",
    "anchor",
    "prediction-markets",
    "conditional-tokens",
